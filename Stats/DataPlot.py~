import math
import numpy as np
import matplotlib.pyplot as plt
import csvfile as f
import tio as t

def main():

    filename = t.getFilename("File","txt")
    data = f.readCSV(filename)

    plt.errorbar(data[0],data[1],xerr=0.0,yerr=data[2],fmt="bx")
    plt.title("Data Plot")
    plt.xlabel("x value")
    plt.ylabel("y value")
    plt.show()

main()
